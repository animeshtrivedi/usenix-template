author = {Didona, Diego and Pfefferle, Jonas and Ioannou, Nikolas and Metzler, Bernard and \ulx{Animesh Trivedi}},
title = {{Understanding Modern Storage APIs: A Systematic Study of Libaio, SPDK, and io\_uring}},
