@inproceedings{2014-asplos-sdf,
author = {Ouyang, Jian and Lin, Shiding and Jiang, Song and Hou, Zhenyu and Wang, Yong and Wang, Yuanzheng},
title = {SDF: Software-Defined Flash for Web-Scale Internet Storage Systems},
year = {2014},
